{
    "name": "@legendapp/motion",
    "version": "2.5.2",
    "description": "legend-motion",
    "sideEffects": false,
    "main": "lib/commonjs/",
    "module": "lib/module/",
    "types": "index.d.ts",
    "react-native": "src/",
    "source": "src/",
    "exports": {
        ".": {
            "types": "./index.d.ts",
            "import": "./lib/module/index.js",
            "require": "./lib/commonjs/index.js",
            "default": "./index.js"
        },
        "./svg": {
            "types": "./svg.d.ts",
            "import": "./lib/module/svg.js",
            "require": "./lib/commonjs/svg.js",
            "default": "./svg.js"
        },
        "./linear-gradient": {
            "types": "./linear-gradient.d.ts",
            "import": "./lib/module/linear-gradient.js",
            "require": "./lib/commonjs/linear-gradient.js",
            "default": "./linear-gradient.js"
        },
        "./linear-gradient-expo": {
            "types": "./linear-gradient-expo.d.ts",
            "import": "./lib/module/linear-gradient-expo.js",
            "require": "./lib/commonjs/linear-gradient-expo.js",
            "default": "./linear-gradient-expo.js"
        },
        "./styled": {
            "types": "./styled.d.ts",
            "import": "./lib/module/styled.js",
            "require": "./lib/commonjs/styled.js",
            "default": "./styled.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "src",
        "lib",
        "index.js",
        "index.d.ts",
        "svg.js",
        "svg.d.ts",
        "linear-gradient.js",
        "linear-gradient.d.ts",
        "linear-gradient-expo.js",
        "linear-gradient-expo.d.ts",
        "styled.js",
        "styled.d.ts"
    ],
    "scripts": {
        "test": "jest",
        "typescript": "tsc --noEmit",
        "lint": "eslint \"**/*.{js,ts,tsx}\"",
        "prepare": "bob build",
        "release": "release-it",
        "example": "cd example && npm i",
        "pods": "cd example && pod-install --quiet",
        "bootstrap": "npm run example && npm i && npm run pods"
    },
    "keywords": [
        "react",
        "native",
        "react-native",
        "animations",
        "transitions",
        "framer",
        "motion",
        "framer-motion"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/LegendApp/legend-motion.git"
    },
    "author": "Legend <contact@legendapp.com> (https://github.com/LegendApp)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/LegendApp/legend-motion/issues"
    },
    "homepage": "https://github.com/LegendApp/legend-motion#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^16.2.1",
        "@react-native-community/eslint-config": "^3.0.1",
        "@release-it/conventional-changelog": "^4.3.0",
        "@types/jest": "^27.0.3",
        "@types/react": "^19.2.2",
        "@types/react-native": "0.72.6",
        "commitlint": "^16.2.3",
        "eslint": "^8.13.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "expo-linear-gradient": "*",
        "expo-modules-core": "*",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "nativewind": ">=4.0.0",
        "pod-install": "^0.1.0",
        "prettier": "^2.0.5",
        "react-native-builder-bob": "^0.18.0",
        "react-native-linear-gradient": "^2.5.6",
        "react-native-svg": "^12.3.0",
        "react-native": "^0.82.0",
        "react": "^19.2.0",
        "release-it": "^14.2.2",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@legendapp/tools": "2.0.1"
    },
    "peerDependencies": {
        "react": ">=16",
        "react-native": "*",
        "nativewind": ">=4.0.0"
    },
    "jest": {
        "preset": "react-native",
        "modulePathIgnorePatterns": [
            "<rootDir>/example/node_modules",
            "<rootDir>/lib/"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "@react-native-community",
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 140,
                    "semi": true,
                    "singleQuote": true,
                    "trailingComma": "es5",
                    "tabWidth": 4
                }
            ]
        }
    },
    "eslintIgnore": [
        "node_modules/",
        "lib/"
    ],
    "prettier": {
        "printWidth": 140,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    },
    "directories": {
        "example": "example",
        "lib": "lib"
    }
}
